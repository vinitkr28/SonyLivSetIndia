<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/product_sample" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="SONY Xperia E1 Dual (Black, 4 GB)(512 MB RAM)"
                android:textAppearance="@android:style/TextAppearance.Medium"
                app:layout_constraintBottom_toTopOf="@id/txt_desc"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:ellipsize="end"
                android:textAppearance="@android:style/TextAppearance.Small"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@id/txt_name"
                app:layout_constraintTop_toBottomOf="@+id/txt_name"
                tools:text="Meet the Sony Xperia XZs - a smartphone that boasts world’s first 19 MP Motion Eye camera with Predictive Capture technology, till date. Record slow motion videos at up to 960 fps or capture bright and clear photos while on-the-move, the powerful rear camera brings out the best in every moment. Adding further to the phone’s appeal is its 13 MP Exmor RS front camera with Gesture Shutter technology. With an IP68 water-resistant ALKALEIDO metal body, the Sony Xperia XZs is as attractive as it is durable. Powered by a 2.2 GHz Qualcomm Snapdragon 820 quad-core 64-bit processor and 4 GB of RAM, the Xperia XZs can handle almost any task you throw at it. Its 64 GB of internal memory makes enough room for high-resolution video and audio content." />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>